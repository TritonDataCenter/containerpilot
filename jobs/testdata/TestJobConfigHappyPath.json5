[
  {
    "name": "serviceA",
    "port": 8080,
    "interfaces": "inet",
    "exec": "/bin/serviceA",
    when: {
      source: "preStart",
      event: "exitSuccess",
    },
    "health": "/bin/to/healthcheck/for/service/A.sh",
    "poll": 30,
    "ttl": "19",
    "tags": ["tag1","tag2"]
  },
  {
    "name": "serviceB",
    "port": 5000,
    "interfaces": ["ethwe","eth0", "inet"],
    "exec": ["/bin/serviceB", "B"],
    "health": ["/bin/to/healthcheck/for/service/B.sh", "B"],
    "timeout": "2s",
    "poll": 20,
    "ttl": "103"
  },
  {
    "name": "coprocessC",
    "exec": "/bin/coprocessC",
    "restarts": "unlimited"
  },
    {
    "name": "taskD",
    "exec": "/bin/taskD",
    "frequency": "1s"
  },
  {
    name: "preStart",
    exec: "/bin/to/preStart.sh arg1 arg2"
  },
  {
    name: "preStop",
    when: {
      source: "serviceA",
      event: "stopping"
    },
    exec: ["/bin/to/preStop.sh","arg1","arg2"]
  },
  {
    name: "postStop",
    when: {
      source: "serviceA",
      event: "stopped"
    },
    exec: ["/bin/to/postStop.sh"]
  }
]
