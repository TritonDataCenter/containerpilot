[
  {
    name: "serviceA",
    port: 8080,
    interfaces: ["inet", "lo0"],
    exec: "/bin/serviceA.sh",
    when: {
      source: "preStart",
      once: "exitSuccess",
    },
    health: {
      interval: 1,
      ttl: 5,
      exec: "/bin/checkA.sh"
    }
  },
  {
    name: "preStart",
    exec: "/bin/to/preStart.sh arg1 arg2"
  },
  {
    name: "preStop",
    when: {
      source: "serviceA",
      once: "stopping"
    },
    exec: ["/bin/to/preStop.sh","arg1","arg2"]
  },
  {
    name: "postStop",
    when: {
      source: "serviceA",
      once: "stopped"
    },
    exec: ["/bin/to/postStop.sh"]
  }
]
