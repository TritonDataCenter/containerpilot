[
  {
    name: "serviceA",
    port: 8080,
    interfaces: ["inet", "lo0"],
    exec: "/bin/serviceA",
    when: {
      source: "preStart",
      once: "exitSuccess",
    },
    health: {
      exec: "/bin/to/healthcheck/for/service/A.sh",
      interval: 10,
      ttl: 30,
    },
    tags: ["tag1","tag2"]
  },
  {
    name: "serviceB",
    port: 5000,
    interfaces: ["ethwe", "eth0", "inet", "lo0"],
    exec: ["/bin/serviceB", "B"],
    health: {
      exec: ["/bin/to/healthcheck/for/service/B.sh", "B"],
      interval: 20,
      ttl: 103,
      timeout: "2s"
    }
  },
  {
    name: "coprocessC",
    exec: "/bin/coprocessC",
    restarts: "unlimited"
  },
  {
    name: "taskD",
    exec: "/bin/taskD",
    when: {
      interval: "1s"
    }
  },
  {
    name: "preStart",
    exec: "/bin/to/preStart.sh arg1 arg2"
  },
  {
    name: "preStop",
    when: {
      source: "serviceA",
      once: "stopping"
    },
    exec: ["/bin/to/preStop.sh","arg1","arg2"]
  },
  {
    name: "postStop",
    when: {
      source: "serviceA",
      once: "stopped"
    },
    exec: ["/bin/to/postStop.sh"]
  },
  {
    name: "reloadA",
    when: {
      source: "signal",
      each: "SIGHUP"
    },
    exec: "kill -HUP $CONTAINERPILOT_NGINX_PID"
  },
  {
    name: "reloadB",
    when: {
      source: "signal",
      once: "SIGUSR2"
    },
    exec: "kill -USR2 $CONTAINERPILOT_NGINX_PID"
  }
]
