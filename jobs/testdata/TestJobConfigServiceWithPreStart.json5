[
  {
    name: "serviceA",
    port: 8080,
    uid: 1,
    gid: 1,
    interfaces: ["inet", "lo0"],
    exec: "/bin/serviceA.sh",
    when: {
      source: "preStart",
      once: "exitSuccess",
    },
    health: {
      exec: "/bin/healthCheckA.sh A1 A2",
      interval: 10,
      ttl: 30,
    },
    tags: ["tag1","tag2"]
  },
  {
    name: "preStart",
    exec: "/bin/to/preStart.sh arg1 arg2"
  },
  {
    name: "preStop",
    when: {
      source: "serviceA",
      once: "stopping"
    },
    exec: ["/bin/to/preStop.sh","arg1","arg2"]
  },
  {
    name: "postStop",
    when: {
      source: "serviceA",
      once: "stopped"
    },
    exec: ["/bin/to/postStop.sh"]
  }
]
