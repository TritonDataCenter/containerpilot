{
  "consul": "consul:8500",
  "logging": {
    "level": "DEBUG",
    "format": "text"
  },
  "services": [
    {
      "name": "nginx",
      "port": 80,
      "interfaces": ["eth0"],
      "health": "/usr/bin/curl --fail -s -o /dev/null http://localhost/health.txt",
      when: {
        source: "preStart",
        event: "exitSuccess",
      },
      "exec": "nginx",
      "poll": 1,
      "ttl": 5
    },
    {
      "name": "preStart",
      "exec": ["consul-template", "-once", "-retry", "3s",
               "-consul", "consul:8500", "-template",
               "/etc/nginx-consul.ctmpl:/etc/nginx/nginx.conf"],
    }
  ],
  "backends": [
    {
      "name": "app",
      "poll": 1,
      "onChange": [
          "consul-template", "-once", "-consul", "consul:8500", "-template",
          "/etc/nginx-consul.ctmpl:/etc/nginx/nginx.conf:nginx -s reload"
      ]
    }
  ]
}
